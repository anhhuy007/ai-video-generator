erDiagram
    users {
        UUID id PK
        TEXT google_id
        TEXT email
        TEXT name
        TEXT avatar_url
        TIMESTAMP created_at
        TIMESTAMP updated_at
    }

    gallery {
        UUID id PK
        TEXT video_url
        TEXT title
        UUID added_by FK
        TIMESTAMP created_at
        INTEGER duration
        TEXT quality
        TEXT category
    }

    gen_history {
        UUID id PK
        UUID user_id FK
        TEXT prompt
        UUID gallery_id FK
        TIMESTAMP created_at
    }

    users ||--o{ gallery : "added_by"
    users ||--o{ gen_history : "user_id"
    gallery ||--o{ gen_history : "gallery_id"
