    users ||--o{ gen_history : "user_id"
    gallery ||--o{ gen_history : "gallery_id"

    users {
        uuid id PK
        string google_id UK
        string email UK
        string name
        string avatar_url
        timestamp created_at
        timestamp updated_at
    }

    gallery {
        uuid id PK
        string video_url UK
        string title
        uuid added_by FK
        timestamp created_at
        integer duration
        string category
    }

    gen_history {
        uuid id PK
        uuid user_id FK
        string prompt
        uuid gallery_id FK
        timestamp created_at
    }